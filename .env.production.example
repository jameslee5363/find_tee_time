# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values
# Usage: cp .env.production.example .env.production
# Deploy: docker-compose -f docker-compose.prod.yml --env-file .env.production up -d

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=airflow
POSTGRES_PORT=5433

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
AIRFLOW_WEBSERVER_PORT=8081

# =============================================================================
# JWT SECURITY
# =============================================================================
# CRITICAL: Generate a strong random key for production
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_HERE

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Set this to your production frontend URL
# Examples: https://yourdomain.com or https://your-app.netlify.app
PRODUCTION_FRONTEND_URL=https://yourdomain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend API URL for the frontend to connect to
# This should be your production backend URL
# Examples: https://api.yourdomain.com or https://your-backend.herokuapp.com
REACT_APP_API_URL=https://api.yourdomain.com

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# GOLF COURSE CREDENTIALS
# =============================================================================
# Golf course booking system credentials
GOLF_USERNAME=your_golf_username
GOLF_PASSWORD=your_golf_password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending tee time notifications
# For Gmail: Use App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=your_email@gmail.com

# =============================================================================
# TEE TIME NOTIFIER CONFIGURATION
# =============================================================================
# Notifier mode: 'consumer', 'periodic', or 'both'
NOTIFIER_MODE=both

# Interval in seconds for periodic matcher checks (default: 300 = 5 minutes)
MATCHER_CHECK_INTERVAL=300

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
