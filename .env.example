# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Usage: cp .env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_PORT=5433

# Application database URL (automatically uses 'app' database)
DATABASE_URL=postgresql://airflow:airflow@postgres/app

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow
AIRFLOW_WEBSERVER_PORT=8081

# =============================================================================
# JWT SECURITY
# =============================================================================
# CRITICAL: Generate a strong random key for production
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Set this to your production frontend URL
# Examples: https://yourdomain.com or https://your-app.netlify.app
PRODUCTION_FRONTEND_URL=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend API URL for the frontend to connect to
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# BACKEND PORT CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# GOLF COURSE CREDENTIALS
# =============================================================================
# These are placeholders - set actual values in Airflow UI Variables
GOLF_USERNAME=your_username
GOLF_PASSWORD=your_password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending tee time notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=your_email@gmail.com

# =============================================================================
# TEE TIME NOTIFIER CONFIGURATION
# =============================================================================
# Notifier mode: 'consumer', 'periodic', or 'both'
NOTIFIER_MODE=both

# Interval in seconds for periodic matcher checks
MATCHER_CHECK_INTERVAL=300

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# =============================================================================
# PGADMIN CONFIGURATION (Development only)
# =============================================================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
